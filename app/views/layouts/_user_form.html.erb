
<div class="row">

  <div class="col-xs-12">
      <div class="form-wrapper">
      <%= form_for @user do |f| %>
        <% if f.object.errors.any? %>
          <% f.object.errors.full_messages.each do |e| %>
            <p><%=e%></p>
          <% end %>
        <%end%>

        <div>
          <%= f.label      :name %>
        </br>
          <%= f.text_field :name %>
        </div>
        </br>
        <div>
          <%= f.label      :email %>
          </br>
          <%= f.text_field :email %>
        </div>
        </br>
        <div>
          <%= f.label      :picture_url %>
          </br>
          <%= f.text_field :picture_url %>
        </div>
        </br>
        <div>
          <%= f.label      :bio %>
          </br>
          <%= f.text_area  :bio %>
        </div>
        <div class="submit_button">
        <%= f.submit class: "btn submit-button"%>
        </div>
      </div>
  </div>

          </div>

<% end %>
