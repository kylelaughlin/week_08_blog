<div class="container">
  <div class="users-container">
    <% @users.each do |user| %>
      <div class="user-card">
        <div class="user-card-image-wrapper">
          <%= link_to image_tag("#{user.picture_url}", class: "thumbnail-image"),
              user_path(user.id) %>
        </div>
        <p><%= link_to "#{user.name}", user_path(user.id), class: "summary-title" %></p>
        <p><%=user.email%>
      </div>
    <% end %>

  </div>
  <div class="text-center">
    <%= link_to "Create New User", :new_user, class: "btn user_button" %>
  </div>
</div>
