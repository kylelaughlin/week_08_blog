<div class="container">
  <div class="content-wrapper">
    <div class="row">
      <div class="col-md-4">
        <%= render partial: "layouts/bio", locals: {user: @user} %>
      </div>
      <div class="col-md-8">
        <h4 class="text-center"><%=@user.name%>'s Posts</h4>
        <div class="text-center">
          <%= link_to "Write New Post", :new_post, class: "btn user_button" %>
        </div>
        <% @posts.each do |post| %>
        <%= render partial: "layouts/post_summary", locals: {post: post} %>
        <% end %>
      </div>
    </div>
  </div>
</div>
